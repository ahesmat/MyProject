version: '3.1'

services:
  ahmeddb:
    image: mongo:latest
    container_name: ahmeddb
    restart: always
    environment: 
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: example
    volumes:
      - /my/own/datadir:/data/db  # Mount a volume to persist MongoDB data
    ports:
      - "27017:27017"
